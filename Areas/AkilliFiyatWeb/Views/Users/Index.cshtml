@model IEnumerable<MyPortfolyoWebSite.Models.AppUser>
    @{
        Layout = "~/Areas/AkilliFiyatWeb/Views/Shared/_Layout.cshtml";
    }
<div class="container">
<a class="btn btn-primary" href="Account/Create">Create User</a>
<hr>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th style="width: 125px;"></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">User Yok</td></tr>
        }
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <a href="Edit/@user.Id" class="btn btn-primary btn-sm">Edit</a>
                    <form action="/akilli-fiyat/Users/Delete?id=@user.Id" method="post" onsubmit="return confirm('Emin misiniz?')" style="display: inline-block;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>