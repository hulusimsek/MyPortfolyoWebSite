                <style>
                  .progress {
                    position: relative;
                  }

                  .progress .progress-label {
                    position: absolute;
                    top: 0;
                    right: 0;
                    background-color: transparent;
                    color: black;
                    padding: 3px 8px;
                    border-radius: 4px;
                  }
                </style>
                <div class="col-md-6">
                  <div class="skills">
                    @if (ViewBag.AboutMe.Skills != null &&
                    ViewBag.AboutMe.Skills.Count > 0) { var halfCount =
                    (int)Math.Ceiling(ViewBag.AboutMe.Skills.Count / 2.0); var
                    count = 0; foreach (var skill in ViewBag.AboutMe.Skills) {
                    if (count >= halfCount) { break; }
                    <div class="skill-name">
                      <p>@skill.Name</p>
                      <p class="progress-label">@skill.Value%</p>
                      <div class="progress">
                        <div
                          class="progress-bar"
                          role="progressbar"
                          style="width: @skill.Value%"
                          aria-valuenow="@skill.Value"
                          aria-valuemin="0"
                          aria-valuemax="100"
                        ></div>
                      </div>
                    </div>
                    count++; } } else {
                    <p>No skills found.</p>
                    }
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="skills">
                    @if (ViewBag.AboutMe.Skills != null &&
