@model List<Messages>
  <div class="container">
    <h1>Contact Messages</h1>
    @if (Model.Count == 0) {
    <p>No messages found.</p>
    } else {
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Message</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var message in Model) {
        <tr>
          <td>@message.Name</td>
          <td>@message.Email</td>
          <td>@message.Subject</td>
          <td>@message.Message</td>
          <td>
            <form asp-action="MessagesDelete" method="post">
              <input
                type="hidden"
                name="messageId"
                value="@message.MessagesId"
              />
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        }
      </tbody>
    </table>
    }
  </div></Messages
>
